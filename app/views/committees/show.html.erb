<table class="committee">
  <thead>
    <tr>
      <th colspan=<%= @parties.length%>> Committee Membership </th>
    </tr>
    <tr>
      <% @parties.each do |p| %>
        <th class=<%=p%>> <%= p %> </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @table_len.times do |i| %>
      <tr>
        <% @parties.each do |p| %>
          <td class=<%=p%>>
            <div class="name">
            <% if @committee.body === "Joint" %>
              <%= "#{@members[p][i].name} (#{@members[p][i].body[0]})" if @members[p][i] %>
            <% else %>
              <%= @members[p][i].name if @members[p][i] %>
            <% end %>
            </div>
            <div class="district">
              <em> <%= @members[p][i].district if @members[p][i] %> </em>
            <div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

