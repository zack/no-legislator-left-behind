<table class="committee">
  <thead>
    <tr>
      <th colspan=<%= @parties.length%>> Committee Membership </th>
    </tr>
    <tr>
      <% @parties.each do |p| %>
        <th class=<%=p%>> <%= p %> </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @table_len.times do |i| %>
      <tr>
        <% @parties.each do |p| %>
          <% if @committee.body === "Joint" %>
            <td class=<%=p%>> <%= "#{@members[p][i].name} (#{@members[p][i].body[0]})" if @members[p][i] %></td>
          <% else %>
            <td class=<%=p%>> <%= @members[p][i].name if @members[p][i] %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

